{
  "name": "linter-api",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsonpath": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/swagger": "^0.8.5",
    "@stoplight/spectral-core": "^1.18.3",
    "@stoplight/spectral-parsers": "^1.0.3",
    "@stoplight/spectral-ruleset-bundler": "^1.5.2",
    "@stoplight/spectral-rulesets": "^1.18.1",
    "ajv": "8.12.0",
    "arctic": "^1.2.1",
    "elysia": "^0.8.17",
    "jose": "^5.2.3",
    "jsonpath": "^1.1.1",
    "lucia": "^3.1.1",
    "oslo": "^1.1.3",
    "yaml": "^2.4.1"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "docker:build": "docker build -t linter-api . -f build/Dockerfile",
    "helm:install": "helm install linter-server ./helm --namespace=default",
    "helm:upgrade": "helm upgrade linter-server ./helm --namespace=default"
  }
}